<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @title %></title>

  </head>

  <body>
    <div id="layout">
      <div id="main">
        <header>
          <h1><%= @title %></h1>
          <h2>by Nick Schaefer</h2>
        </header>

        <section class="content">
          <%= yield %>
        </section>
      </div>
    </div>
    <footer>
      <p>There are <%= @users_count %> users with a total of <%= count_interests(@users) %> interests.</p>
    </footer>

  </body>
</html>
