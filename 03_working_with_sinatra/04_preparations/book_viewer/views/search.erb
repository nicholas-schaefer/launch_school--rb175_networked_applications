<h2 class="content-subhead">Search</h2>

<form action="/search" method="get">
  <input name="query" value="<%= params[:query] %>">
  <button type="submit">Search</button>
</form>

<p><%= @user_query_msg %></p>


<ul>
  <% @chapters_collection_filtered.each do | idx, matched_chapter | %>
    <li>
      <a href="/chapters/<%= matched_chapter[:number] %>" id="paragraph<%= idx%>"class="pure-menu-link"><%= matched_chapter[:title] %></a>
    </li>
      <ul>
        <li><%= matched_chapter[:title] %></li>
      </ul>
  <% end %>
</ul>

